# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = false
charset = utf-8
indent_style = space
indent_size = 4

[*.js]
indent_size = 2

[*.feature]
indent_size = 2

[*.yml]
indent_size = 2

[*.{tsx, ts}]
indent_size = 2

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4
