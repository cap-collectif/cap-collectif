{% extends admin.templateRegistry.getTemplate('base_list_field') %}

{% block field %}
    {% apply spaceless %}
            {% if value == true %}
                <span class="label label-success">{{ 'label_type_yes'|trans }}</span>
            {% else %}
                <span class="label label-danger">{{ 'label_type_no'|trans }}</span>
            {% endif %}
    {% endapply %}
{% endblock %}
