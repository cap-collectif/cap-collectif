{% extends '@SonataAdmin/CRUD/base_list_field.html.twig' %}

{% block field %}
    <div>
        {% if(object.Author is not null) %}
{#            TODO: When the show user page in BO will be re enabled, set the path to the show user route (`admin_capco_user_user_show`)  #}
            <span>
                <a href="{{ path('admin_capco_user_user_edit', {'id': object.Author.id}) }}">
                    {{ object.Author.username | trans({}, 'CapcoAppBundle') }}
                </a>
            </span>
        {% else %}
            <span>
                {{ object.authorName | trans({}, 'CapcoAppBundle') }}
            </span>
        {% endif %}
    </div>
{% endblock %}
