{% extends 'SonataAdminBundle:CRUD:base_list_field.html.twig' %}

{% block field %}
    {% if object.post is defined %}
        {{ object.post.title }}
    {% elseif object.event is defined %}
        {{ object.event.title }}
    {% elseif object.theme is defined %}
        {{ object.theme.title }}
    {% elseif object.project is defined %}
        {{ object.project.title }}
    {% endif %}
{% endblock %}
