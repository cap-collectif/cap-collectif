{% extends '@CapcoAdmin/CRUD/edit.html.twig' %}

{# This is used to allow edition on opinion types #}

{% block form %}
    {{ parent() }}
    {{ admin.uniqid }}
        <script type="text/javascript">
            $(document).ready( function() {
                $("#{{ admin.uniqid }}_opinionTypes .checkbox").on('click', function(e) {
                    console.log('cc');
                    var opinionTypeId = $(this).find('input').val();
                    var getUrl = window.location;
                    var baseUrl = getUrl .protocol + "//" + getUrl.host + "/" + getUrl.pathname.split('/')[1];
                    var url = baseUrl + "/capco/app/opiniontype/" + opinionTypeId + "/edit";
                    console.log(url);
                    window.location = new URL(url);


                    return true;
                });
            });
        </script>
{% endblock %}