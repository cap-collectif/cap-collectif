{% extends '@SonataAdmin/CRUD/base_show_field.html.twig' %}

{% block field %}
    <div>
        {% if (object.Opinion is not null) %}
            <p><a href="{{ path('admin_capco_app_opinion_edit', {'id': object.Opinion.id}) }}">
                <strong>{{ object.Opinion.title|trans({}, 'CapcoAppBundle') }}</strong>
            </a></p>
            {{ object.Opinion.body | raw }}
        {% elseif (object.opinionVersion is not null) %}
            <p><a href="{{ path('admin_capco_app_opinionversion_edit', {'id': object.opinionVersion.id}) }}">
                <strong>{{ object.opinionVersion.title|trans({}, 'CapcoAppBundle') }}</strong>
            </a></p>
            {{ object.opinionVersion.body | raw }}
        {% elseif (object.Source is not null) %}
            <p><a href="{{ path('admin_capco_app_source_edit', {'id': object.Source.id}) }}">
                <strong>{{ object.Source.title|trans({}, 'CapcoAppBundle') }}</strong>
            </a></p>
        {% elseif (object.Argument is not null) %}
            <p><a href="{{ path('admin_capco_app_argument_edit', {'id': object.Argument.id}) }}">
                {{ object.Argument.body|trans({}, 'CapcoAppBundle') }}
            </a></p>
        {% elseif (object.Comment is not null) %}
            <a href="{{ path('admin_capco_app_comment_edit', {'id': object.Comment.id}) }}">
                {{ object.Comment.body|trans({}, 'CapcoAppBundle') }}
            </a>
        {% elseif (object.Proposal is not null) %}
            <a href="{{ path('admin_capco_app_proposal_edit', {'id': object.Proposal.id}) }}">
                {{ object.Proposal.title|trans({}, 'CapcoAppBundle') }}
            </a>
        {% elseif (object.debateArgument is not null) %}
            <p>
                {{ object.debateArgument.__toString|trans({}, 'CapcoAppBundle') }}
            </p>
        {% endif %}
    </div>
{% endblock %}
