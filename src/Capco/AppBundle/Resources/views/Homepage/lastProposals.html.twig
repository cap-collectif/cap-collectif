{% if proposals|length > 0 %}
    <section id="proposals" class="section--custom">
        <div class="container">
            {% if null != section.title %}
                <h2 class="h2">{{ section.title }}</h2>
            {% else %}
                <h2 class="h2">{{ 'homepage.proposals.title' | trans({}, 'CapcoAppBundle') }}</h2>
            {% endif %}
            {% if null != section.teaser %}
                <p class="block">{{ section.teaser }}</p>
            {% endif %}
            {% if null != section.body %}
                <p>{{ section.body | raw }}</p>
            {% endif %}
            <div class="row proposal-preview-list">
                {% for proposal in proposals %}
                    {% include '@CapcoApp/Proposal/blockProposal.html.twig' with {'proposal': proposal, 'colClasses': 'col-xs-12 col-sm-4 col-md-3 col-lg-3'} only %}
                {% endfor %}
            </div>
            {% if section.step is not null %}
                <a href="{{ path('app_project_show_collect', {'projectSlug': section.step.project.slug, 'stepSlug': section.step.slug}) }}" class="btn  btn-primary  btn--outline">{{ 'proposal.see_all'|trans({}, 'CapcoAppBundle') }}</a>
            {% endif %}
        </div>
    </section>
{% endif %}
