{% if count > 0 %}
    {% set locale = app.request.locale %}
    <section id="projects" class="section--custom">
        <div class="container">
            {% if null != section.title %}
                <h2 class="h2">{{ section.title }}</h2>
            {% endif %}
            {% if null != section.teaser %}
                <p class="block">{{ section.teaser }}</p>
            {% endif %}
            {% if null != section.body %}
                <p>{{ section.body | raw }}</p>
            {% endif %}

            <div class="row">
                {{ react_render_component('ProjectsListApp', { 'props': {'limit': max, 'paginate': false} }) }}
            </div>

            {% if count > max %}
                <div style={{is_feature_enabled('new_project_card') ? 'text-align:center;width:100%;' : ''}}>
                    <a href="{{ path('app_project', {'_locale': locale}) }}" class="btn btn-primary btn--outline
                    see-more-projects-button">{{ 'project.see_all'|trans({}, 'CapcoAppBundle') }}</a>
                </div>
            {% endif %}
        </div>
    </section>
{% endif %}
