{% if socialNetworks|length > 0 %}
    <section id="links" class="section--custom">
        <div class="container  text-center">
            {% if null != section.title %}
                <h2 class="h2">{{ section.title }}</h2>
            {% else %}
                <h2 class="h2">{{ 'homepage.social_networks.title' | trans({}, 'CapcoAppBundle') }}</h2>
            {% endif %}
            {% if null != section.teaser %}
                <p class="block" id="teaser">{{ section.teaser }}</p>
            {% endif %}
            {% if null != section.body %}
                <p>{{ section.body | raw }}</p>
            {% endif %}
            <ul class="social__icons">
                {% for socialNetwork in socialNetworks %}
                    <li>
                        <a href="{{ socialNetwork.link }}" class="external-link">
                            <img
                                title={{ socialNetwork.title }}
                                alt=""
                                class="social__icon"
                                src={{ media_public_url(socialNetwork.media, 'default_socialIcon') }}
                            />
                            <p>{{ socialNetwork.title }}</p>
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </section>
{% endif %}
