{% extends '@CapcoApp/base.html.twig' %}

{% block canonical_link %}{{ url('app_idea_show', {'slug': idea.slug}) }}{% endblock %}

{% block metaTags %}
    {% set ideaMedia %}{% if idea.media %}{% path idea.media, 'idea' %}{% endif %}{% endset %}
    {% include 'CapcoAppBundle:Default:meta.html.twig' with {
        'title':       idea.title,
        'description': idea.body|striptags|truncate(250, true),
        'url':         url('app_idea_show', {'slug': idea.slug}),
        'image':       ideaMedia,
    } only %}
{% endblock %}

{% block title %}
    {{ parent() }} - {{ idea.title }}
{% endblock %}

{% block jumbotron %}{% endblock %}

{% block reduxStore %}
  {% set initialState = {
    'idea': {
      'currentIdeaById': idea.id,
      'ideas': {
        (idea.id) : props
      }
    }
  } %}
  {% include '@CapcoApp/redux_store.html.twig' with {'data' : initialState} %}
{% endblock %}

{% block body %}
    {{ react_intl_component('IdeaPageApp', {'props': props}) }}
{% endblock %}
