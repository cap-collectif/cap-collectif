{% set nbPosts = theme.countEnabledPosts() %}
{% set nbEvents = theme.countEnabledEvents() %}
{% set nbAppendices = (nbPosts > 0) + (nbEvents > 0) %}
{% if nbAppendices > 0 %}
    <section class="section--custom">
        <div class="container appendices__container">
            <div class="row  text-center">
                {% if nbPosts > 0 %}
                    <div class="col-centered col-xs-12 col-sm-6 col-md-4 text-center  appendices__item  box">
                        <h2 class="h4">{{ 'theme.show.appendices.posts.title'|trans({}, 'CapcoAppBundle') }}</h2>
                        <p class="excerpt">
                            {{ 'article-related-count' | trans({'count': nbPosts}, 'CapcoAppBundle') }}
                        <p><a href="{{ path('app_blog_search_theme', {'theme': theme.slug}) }}" class="btn  btn-primary  btn--outline">{{ 'theme.show.appendices.posts.button'|trans({}, 'CapcoAppBundle') }}</a></p>
                    </div>
                {% endif %}
                {% if nbEvents > 0 %}
                    <div class="col-centered col-xs-12 col-sm-6 col-md-4 text-center  appendices__item  box">
                        <h2 class="h4">{{ 'theme.show.appendices.events.title'|trans({}, 'CapcoAppBundle') }}</h2>
                        <p class="excerpt">
                            {{ 'event-related-count' | trans({'count': nbEvents}, 'CapcoAppBundle') }}
                        <p><a href="{{ path('app_event', {theme: theme.id}) }}" class="btn  btn-primary  btn--outline">{{ 'theme.show.appendices.events.button'|trans({}, 'CapcoAppBundle') }}</a></p>
                    </div>
                {% endif %}
            </div>
        </div>
    </section>
{% endif %}
