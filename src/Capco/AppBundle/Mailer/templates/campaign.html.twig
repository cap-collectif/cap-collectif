{% extends "@CapcoMail/standardLayoutNew.html.twig" %}

{% block core_mail %}
    <div class="ql-editor">
        {{ content|raw }}
    </div>
{% endblock %}

{% block footer_mail %}
    <div>
        {% block subscribed_part %}
            <p style="margin: 0;">{{ 'email.notification.footer.subscribe.to'|trans({'{siteName}': siteName,'{siteUrl}': url('app_homepage'),}, 'CapcoAppBundle', user_locale) | raw }}</p>
        {% endblock %}

        <p style="margin: 0 0 18px 0;">
            {% block unsubscribe_part %}
                {{ 'click-here-to-unsubscribe'|trans({'{unsubscribeUrl}': unsubscribeUrl,}, 'CapcoAppBundle', user_locale) | raw }}
            {% endblock %}
        </p>

        <p style="text-align: center;">
            {% block signature_part %}
                {{ 'email.propulsed.by.capco'|trans({
                    '{logoUrl}': url('app_homepage') ~ asset('capco-logo-mail.png'),
                }, 'CapcoAppBundle', user_locale) | raw }}
            {% endblock %}
        </p>
    </div>
{% endblock %}

{% block style_mail %}
    {{ parent() }}
    {{ include("@CapcoMail/wysiwyg.css") }}
{% endblock %}
